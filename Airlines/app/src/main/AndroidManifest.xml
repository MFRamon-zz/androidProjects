<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rmanrique.airlines">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.rmanrique.airlines.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.rmanrique.airlines.Activities.AddUserActivity" />
        <activity android:name="com.example.rmanrique.airlines.Activities.LoginFirebaseActivity" />
        <activity android:name="com.example.rmanrique.airlines.Activities.FlightsScheduleActivity" />
        <activity android:name="com.example.rmanrique.airlines.Activities.IntroductionActivity" />
        <activity android:name="com.example.rmanrique.airlines.Activities.AddPassengerActivity"></activity>
    </application>

</manifest>